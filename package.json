{
  "name": "cloudflare-workers-remix-shopify",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "npm run build:remix",
    "build:remix": "remix build --sourcemap",
    "dev": "shopify app dev --no-update",
    "dev:remix": "remix watch",
    "dev:worker": "wrangler dev --site public --compatibility-flag nodejs_compat --live-reload --test-scheduled",
    "deploy": "wrangler deploy",
    "local:dev": "npm run build && concurrently \"npm:dev:*\"",
    "start": "wrangler dev ./build/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "shopify": "shopify",
    "lint": "eslint . --fix",
    "shopify:config:link": "shopify app config link",
    "shopify:config:push": "shopify app config push",
    "shopify:config:use": "shopify app config use",
    "shopify:generate": "shopify app generate",
    "shopify:deploy": "shopify app deploy",
    "shopify:env": "shopify app env",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:up": "drizzle-kit up:sqlite --schema=app/utils/db/schema.server.ts",
    "codegen": "graphql-codegen --config codegen.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.3.0",
    "@codemirror/lang-css": "^6.2.1",
    "@conform-to/react": "^0.9.1",
    "@conform-to/zod": "^0.9.1",
    "@epic-web/cachified": "^4.0.0",
    "@epic-web/invariant": "^1.0.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@remix-run/cloudflare": "^2.3.1",
    "@remix-run/css-bundle": "^2.3.1",
    "@remix-run/react": "^2.3.1",
    "@shopify/app": "^3.52.0",
    "@shopify/cli": "^3.52.0",
    "@shopify/polaris": "^12.1.1",
    "@shopify/react-i18n": "^7.8.0",
    "@shopify/shopify-api": "^8.1.1",
    "@shopify/shopify-app-remix": "^2.1.0",
    "@shopify/shopify-app-session-storage-kv": "^2.0.1",
    "@uiw/codemirror-theme-gruvbox-dark": "^4.21.21",
    "@uiw/react-codemirror": "^4.21.21",
    "@web3-storage/multipart-parser": "^1.0.0",
    "cachified-adapter-cloudflare-kv": "^1.0.1",
    "drizzle-orm": "^0.29.1",
    "graphql-request": "^6.1.0",
    "isbot": "^3.6.8",
    "pino": "^8.17.1",
    "pino-pretty": "^10.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@graphql-codegen/schema-ast": "^4.0.0",
    "@graphql-codegen/typed-document-node": "^5.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-generic-sdk": "^3.1.0",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@parcel/watcher": "^2.2.0",
    "@remix-run/dev": "^2.3.1",
    "@remix-run/eslint-config": "^2.3.1",
    "@shopify/app-bridge-types": "^0.0.3",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "prettier-plugin-sql": "^0.17.1",
    "typescript": "^5.1.6",
    "wrangler": "3.22.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": {
    "packages": [
      "extensions/*"
    ]
  },
  "trustedDependencies": [
    "@shopify/plugin-cloudflare"
  ],
  "standard": {
    "ignore": [
      "node_modules",
      "build",
      "public/build",
      "shopify-app-remix",
      "*/*.yml",
      ".shopify",
      "app/generated"
    ]
  }
}
